<h1>Listing images</h1>

<table>
  <tr>
    <th>File name</th>
    <th>Bucket name</th>
    <th>Content type</th>
    <th>File size</th>
    <th>Finished product</th>
    <th>Base product</th>
    <th>Uploaded by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.file_name %></td>
    <td><%= image.bucket_name %></td>
    <td><%= image.content_type %></td>
    <td><%= image.file_size %></td>
    <td><%= image.finished_product %></td>
    <td><%= image.base_product %></td>
    <td><%= image.uploaded_by %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

