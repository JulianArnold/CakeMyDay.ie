<%= form_for(@fpi, :url => create_finished_product_ingredient_url) do |f| %>
  <% if @fpi.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fpi.errors.count, "error") %> prohibited this finished_product from being saved:</h2>

      <ul>
      <% @fpi.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.hidden_field :finished_product_id, :value => @fpi.finished_product_id %>
  
  <div class="field">
    <span class="form-label"><%= f.label :product_id %></span>
    <span class="form-field"><%= f.collection_select :product_id, @products, :id, :category_and_name %></span>
  </div>
  <div class="field">
    <span class="form-label"><%= f.label :quantity %></span>
    <span class="form-field"><%= f.number_field :quantity, :value => 1 %></span>
  </div>
  <div class="field">
    <span class="form-label"><%= f.label :product_options_list_choice %></span>
    <span class="form-field"><%= f.text_field :product_options_list_choice %></span>
  </div>
  <div class="field">
    <span class="form-label"><%= f.label :global_options_list_choice %></span>
    <span class="form-field"><%= f.text_field :global_options_list_choice %></span>
  </div>
  <div class="field">
    <span class="form-label"><%= f.label :user_description %></span>
    <span class="form-field"><%= f.text_field :user_description %></span>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
