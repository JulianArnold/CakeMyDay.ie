<h1>Shopping Cart #<%= params[:id] %></h1>
<table>
  <tr><td>Customer:</td><td><%= @shopping_cart.customer.user.full_name %><br/>
    <%= link_to(sanitize(@shopping_cart.customer.user.login), "mailto:" + @shopping_cart.customer.user.login) %></td></tr>
  <tr><td>Cake required at:</td><td><%= @shopping_cart.cake_required_at.strftime("%d-%b-%Y %H:%M") %></td></tr>
  <tr><td>Production quota:</td><td><%= @shopping_cart.production_quotum.start_date.strftime("%d-%b-%Y") %> - <%= @shopping_cart.production_quotum.finish_date.strftime("%d-%b-%Y") %></td></tr>
  <tr><td>Weekday</td><td><%= @shopping_cart.weekday %></td></tr>
  <tr><td>Special occasion:</td><td><%= @shopping_cart.special_occasion %></td></tr>
  <tr><td>Name to appear on cake:</td><td><%= @shopping_cart.name_to_appear_on_cake %></td></tr>
  <tr><td>Shopping cart status:</td><td><%= @shopping_cart.shopping_cart_status.name %></td></tr>
  <tr><td>PayPal status:</td><td><%= @shopping_cart.pay_pal_status.name %></td></tr>
  <tr><td>General description from customer:</td><td><%= @shopping_cart.general_description_from_customer %></td></tr>
</table><br/>
<%= link_to 'Back', shopping_carts_path %> | <%= link_to 'Edit', edit_shopping_cart_path(@shopping_cart) %>