<%= form_for(@shopping_cart) do |f| %>
  <% if @shopping_cart.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shopping_cart.errors.count, "error") %> prohibited this shopping_cart from being saved:</h2>

      <ul>
      <% @shopping_cart.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <span class="form-label"><%= f.label :cake_required_at %></span>
    <span class="form-field"><%= f.datetime_select :cake_required_at, :order => [:day, :month, :year] %></span>
  </div>
  <div class="field">
    <span class="form-label"><%= f.label :special_occasion %></span>
    <span class="form-field"><%= f.text_field :special_occasion %></span>
  </div>
  <div class="field">
    <span class="form-label"><%= f.label :name_to_appear_on_cake %></span>
    <span class="form-field"><%= f.text_field :name_to_appear_on_cake %></span>
  </div>
  <div class="field">
    <span class="form-label"><%= f.label :shopping_cart_status_id %></span>
    <span class="form-field"><%= f.collection_select :shopping_cart_status_id, @shopping_cart_statuses, :id, :name %></span>
  </div>
  <div class="field">
    <span class="form-label"><%= f.label :pay_pal_status_id %></span>
    <span class="form-field"><%= f.collection_select :pay_pal_status_id, @pay_pal_statuses, :id, :name %></span>
  </div>
  <div class="field">
    <span class="form-label"><%= f.label :general_description_from_customer %></span>
    <span class="form-field"><%= f.text_area :general_description_from_customer, :size => "40x8" %></span>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
