<h1>Shopping Carts</h1>
<table>
  <tr>
    <th style="width:  30px;">ID</th>
    <th style="width: 200px;">Customer</th>
    <th style="width: 100px;">Cake required at</th>
    <th style="width: 100px;">Occasion</th>
    <th style="width: 100px;">Name on cake</th>
    <th style="width: 100px;">Shopping cart status</th>
    <th style="width: 70px;">PayPal</th>
    <th style="width: 200px;">Customer description</th>
  </tr>
  <% @shopping_carts.each do |shopping_cart| %>
    <tr style="background-color: <%= cycle("inherit","inherit") %>;">
      <td><%= shopping_cart.id %></td>
      <td><%= link_to(shopping_cart.customer.user.full_name, customer_url(shopping_cart.customer_id), :title => "click to view customer") %></td>
      <td><%= shopping_cart.cake_required_at.strftime("%d-%b-%Y") %></td>
      <td><%= shopping_cart.special_occasion %></td>
      <td><%= shopping_cart.name_to_appear_on_cake %></td>
      <td><%= shopping_cart.shopping_cart_status.name %></td>
      <td><%= shopping_cart.pay_pal_status.name %></td>
      <td><%= shopping_cart.general_description_from_customer %></td>
      <td><%= link_to 'Show', shopping_cart %>
          <%= link_to 'Edit', edit_shopping_cart_path(shopping_cart) %></td>
    </td>
  <% end %>
</table><br/>

<p>Add new Shopping Carts through the online store.</p>