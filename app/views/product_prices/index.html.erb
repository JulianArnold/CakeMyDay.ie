<h1>Listing product_prices</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Start at</th>
    <th>Finish at</th>
    <th>Currency</th>
    <th>Price</th>
    <th>Created by</th>
    <th>Updated by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product_prices.each do |product_price| %>
  <tr>
    <td><%= product_price.product_id %></td>
    <td><%= product_price.start_at %></td>
    <td><%= product_price.finish_at %></td>
    <td><%= product_price.currency_id %></td>
    <td><%= product_price.price %></td>
    <td><%= product_price.created_by %></td>
    <td><%= product_price.updated_by %></td>
    <td><%= link_to 'Show', product_price %></td>
    <td><%= link_to 'Edit', edit_product_price_path(product_price) %></td>
    <td><%= link_to 'Destroy', product_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

