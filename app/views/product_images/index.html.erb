<h1>Product Images</h1>
<table>
  <tr>
    <th style="width: 100px;">Product</th>
    <th style="width: 100px;">Image</th>
    <th style="width: 100px;">Running order</th>
    <td style="width:  90px;"></td>
  </tr>
  <% @product_images.each do |product_image| %>
    <tr style="background-color: <%= cycle("#f9d4e4","inherit") %>;">
      <td><%= product_image.product.name %></td>
      <td><%= product_image.image_id %></td>
      <td><%= product_image.running_order %></td>
      <td><%= link_to 'View', product_image %><br/> |
          <%= link_to 'Edit', edit_product_image_path(product_image) %></td>
      <%= render :partial => '/layouts/delete_button', :locals => {:label => "Product Image", :item => product_image} -%>
    </td>
  <% end %>
</table><br/>
<%= link_to 'New', new_product_image_path %>
