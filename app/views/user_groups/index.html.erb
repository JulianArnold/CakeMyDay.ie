<h1>User Groups</h1>
<table>
  <tr>
    <th style="width: 100px;">Name</th>
    <th style="width: 100px;">Description</th>
    <th style="width: 100px;">Is a manager</th>
    <th style="width: 100px;">Is an admin</th>
    <th style="width:  40px;"></th>
    <th style="width:  40px;"></th>
    <th style="width:  40px;"></th>
  </tr>
  <% @user_groups.each do |user_group| %>
    <tr style="background-color: <%= cycle("inherit","inherit") %>;" class="graduated-background">
      <td><%= user_group.name %></td>
      <td><%= user_group.description %></td>
      <td><%= sanitize tick_or_cross user_group.is_a_manager %></td>
      <td><%= sanitize tick_or_cross user_group.is_an_admin %></td>
      <td><%= link_to 'View', user_group %></td>
      <td><%= link_to 'Edit', edit_user_group_path(user_group) %></td>
      <% if user_group.users.count == 0 %>
      <%= render :partial => '/layouts/delete_button', :locals => {:label => "User Group", :item => user_group} -%>
      <% else %>
      <td><%= user_group.users.count %> users</td>
      <% end %>
    </td>
  <% end %>
</table><br/>
<%= link_to 'New', new_user_group_path %>
